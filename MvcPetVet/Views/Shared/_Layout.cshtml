<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Sandra Sevilleja Gonzalez">
    <title>@ViewData["Title"] - MvcVetPet</title>

    <!--Bootstrap core CSS* -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/NavbarStyleSheet.css" rel="stylesheet" />
    <link href="~/css/cover.css" rel="stylesheet" />

</head>

<body>

    @if (IsSectionDefined("home"))
    {
        //ALGUNA VISTA ESTA ESCRIBIENDO EN HOME
        @RenderSection("home", false)
    }
    else
    {
        //CODIGO ESTATICO EN LAYOUT
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/images/egyptian_animal_symbol.png" alt="Bootstrap" width="30" height="24">
                    Vet Care
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Noticias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Sobre Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    }

    <main>
        <div class="mainer">

            @RenderBody()

        </div>
    </main>

    <footer>
        <div class="tools-box">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
                        <div class="maxheight" style="height: 156px;">
                            <div class="box_inner">
                                <p class="title">Teléfono</p>
                                <p>918115357</p>
                                <p>918113719</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 wow fadeInUp animated" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                        <div class="maxheight" style="height: 156px;">
                            <div class="box_inner">
                                <p class="title">E-Mail</p>
                                <p><a href="#">clinicaveterinariaserbal<br />@@gmail.com</a></p>
                            </div>
                        </div>
                    </div>
                    @*<div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 wow fadeInUp animated" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                        <div class="maxheight" style="height: 156px;">
                            <div class="box_inner">
                                <p class="title">Follow Us</p>
                                <ul class="follow_icon">
                                    <li><a href="#" class="fa fa-facebook"></a></li>
                                    <li><a href="#" class="fa fa-instagram"></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>*@
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 wow fadeInUp animated" data-wow-delay="0.3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInUp;">
                        <div class="indent maxheight" style="height: 156px;">
                            <div class="box_inner">
                                <p class="title">Dirección</p>
                                <p>Pº de San Cosme, 3 <br /> 28600 Navalcarnero Madrid</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*<div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
                    <p></p>
                </div>
            </div>
        </div>*@
    </footer>

    <script src="~/lib/jquery/dist/jquery-3.6.3.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

